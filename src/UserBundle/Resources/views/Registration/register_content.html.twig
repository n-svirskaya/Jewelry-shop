{% trans_default_domain 'FOSUserBundle' %}

<div class="left_content">
    <div class="title"><span class="title_icon"><img src="{{ asset('images/bullet1.gif') }}" alt="" title="" /></span>Register</div>

    <div class="feat_prod_box_details">
        <p class="details">
            Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud. Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud.
        </p>

        <div class="contact_form">
            <div class="form_subtitle">create new account</div>

            <form name="register" action="{{ path('fos_user_registration_register') }}" method="post">
                {{ form_errors(form) }}
                {{ form_widget(form._token) }}
                <div class="form_row">
                    {{ form_row(form.username, {'label_attr':{'class':'contact'}, 'attr':{'class':'contact_input'}, 'label':'username'}) }}
                </div>
                <div class="form_row">
                    {{ form_row(form.email, {'label_attr':{'class':'contact'}, 'attr':{'class':'contact_input'}, 'label':'e-mail'}) }}
                </div>
                <div class="form_row">
                    {{ form_row(form.plainPassword.first, {'label_attr':{'class':'contact'}, 'attr':{'class':'contact_input'}, 'label':'password'}) }}
                </div>
                <div class="form_row">
                    {{ form_row(form.plainPassword.second, {'label_attr':{'class':'contact'}, 'attr':{'class':'contact_input'}, 'label':'repeat password'}) }}
                </div>
                <div class="form_row">
                    <input type="submit" class="register" value="register" />
                </div>
            </form>
        </div>

    </div>



    <div class="clear"></div>
</div><!--end of left content-->

